{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:check": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "prettier:check": "prettier --check --ignore-path .gitignore \"**/*.+(js|ts)\"",
    "prettier:write": "prettier --write --ignore-path .gitignore \"**/*.+(js|ts)\"",
    "prepare": "husky",
    "build": "lerna run build",
    "test": "lerna run test",
    "client": "lerna run start --scope client",
    "server": "lerna run start --scope server"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.9",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,cts,mjs,mts}": [
      "npm run lint:check",
      "npm run prettier:check"
    ]
  }
}
