{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:check": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "prettier:check": "prettier --check --ignore-path .gitignore \"**/*.+(js|ts)\"",
    "prettier:write": "prettier --write --ignore-path .gitignore \"**/*.+(js|ts)\"",
    "prepare": "husky",
    "build": "lerna run build",
    "test": "lerna run test",
    "client": "lerna run start --scope @my-travel-journal/client",
    "server": "lerna run start --scope @my-travel-journal/server",
    "server:prod": "cd packages/server && node .",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.2.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.9",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,cts,mjs,mts}": [
      "yarn lint:check",
      "yarn prettier:check"
    ]
  }
}
